@model IEnumerable<SistemaFacturacion.API.Models.PresupuestoViewModel>

@{
    ViewData["Title"] = "Listado de Presupuestos";
}

<h2>@ViewData["Title"]</h2>

<a class="btn btn-primary mb-3" asp-action="Create">Crear Nuevo Presupuesto</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Usuario</th>
            <th>Categoría</th>
            <th>Moneda</th>
            <th>Limite</th>
            <th>Fecha Inicio</th>
            <th>Fecha Fin</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.UsuarioNombre</td>
                <td>@p.CategoriaNombre</td>
                <td>@p.MonedaNombre</td>
                <td>@p.Limite?.ToString("C")</td>
                <td>@p.FechaInicio?.ToShortDateString()</td>
                <td>@p.FechaFin?.ToShortDateString()</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@p.Id" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Delete" asp-route-id="@p.Id" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
