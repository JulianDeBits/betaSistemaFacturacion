@model SistemaFacturacion.API.Models.PresupuestoViewModel

@{
    ViewData["Title"] = "Crear Presupuesto";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="UsuarioId"></label>
        <select asp-for="UsuarioId" class="form-control" asp-items="ViewBag.Usuarios" optionLabel="-- Seleccione usuario --"></select>
        <span asp-validation-for="UsuarioId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CategoriaId"></label>
        <select asp-for="CategoriaId" class="form-control" asp-items="ViewBag.Categorias" optionLabel="-- Seleccione categoría --"></select>
        <span asp-validation-for="CategoriaId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MonedaId"></label>
        <select asp-for="MonedaId" class="form-control" asp-items="ViewBag.Monedas" optionLabel="-- Seleccione moneda --"></select>
        <span asp-validation-for="MonedaId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Limite"></label>
        <input asp-for="Limite" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="FechaInicio"></label>
        <input asp-for="FechaInicio" type="date" class="form-control" />
    </div>
    <div class="form-group mb-4">
        <label asp-for="FechaFin"></label>
        <input asp-for="FechaFin" type="date" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>



