@model SistemaFacturacion.DAL.Entities.Categoria

@{
    ViewData["Title"] = "Eliminar Categoría";
}

<h2>@ViewData["Title"]</h2>

<h4>¿Estás seguro de que deseas eliminar esta categoría?</h4>

<dl class="row">
    <dt class="col-sm-2">ID</dt>
    <dd class="col-sm-10">@Model.Id</dd>

    <dt class="col-sm-2">Nombre</dt>
    <dd class="col-sm-10">@Model.Nombre</dd>

    <dt class="col-sm-2">Descripcion</dt>
	<dd class="col-sm-10">@Model.Descripcion</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
