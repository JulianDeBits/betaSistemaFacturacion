@model SistemaFacturacion.API.Models.GastoViewModel

<h2>Eliminar Gasto</h2>

<div>
    <h4>¿Está seguro que desea eliminar este gasto?</h4>
    <dl class="row">
        <dt class="col-sm-2">Usuario</dt>
        <dd class="col-sm-10">@Model.UsuarioNombre</dd>

        <dt class="col-sm-2">Categoría</dt>
        <dd class="col-sm-10">@Model.CategoriaNombre</dd>

        <dt class="col-sm-2">Moneda</dt>
        <dd class="col-sm-10">@Model.MonedaNombre</dd>

        <dt class="col-sm-2">Monto</dt>
        <dd class="col-sm-10">@Model.Monto.ToString("C")</dd>

        <dt class="col-sm-2">Fecha</dt>
        <dd class="col-sm-10">@Model.Fecha.ToShortDateString()</dd>

        <dt class="col-sm-2">Descripción</dt>
        <dd class="col-sm-10">@Model.Descripcion</dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
