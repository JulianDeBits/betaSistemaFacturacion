@model SistemaFacturacion.DAL.Entities.Gasto

@{
    ViewData["Title"] = "Eliminar Gasto";
}

<h2>@ViewData["Title"]</h2>

<h4>¿Estás seguro de que deseas eliminar este gasto?</h4>
<div>
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Presupuesto</dt>
        <dd class="col-sm-10">@Model.PresupuestoId</dd>

        <dt class="col-sm-2">Categoría</dt>
        <dd class="col-sm-10">@Model.CategoriaId</dd>

        <dt class="col-sm-2">Monto</dt>
        <dd class="col-sm-10">@Model.Monto.ToString("C")</dd>

        <dt class="col-sm-2">Descripción</dt>
        <dd class="col-sm-10">@Model.Descripcion</dd>
    </dl>

    <form asp-action="Eliminar" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>

