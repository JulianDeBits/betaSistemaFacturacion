@model SistemaFacturacion.API.Models.GastoViewModel

@{
    ViewData["Title"] = "Agregar Gasto";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Crear" method="post">
    <div class="form-group">
        <label asp-for="PresupuestoId"></label>
        <input asp-for="PresupuestoId" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="CategoriaId"></label>
        <input asp-for="CategoriaId" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Monto"></label>
        <input asp-for="Monto" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Descripcion"></label>
        <input asp-for="Descripcion" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Fecha"></label>
        <input asp-for="Fecha" type="date" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
