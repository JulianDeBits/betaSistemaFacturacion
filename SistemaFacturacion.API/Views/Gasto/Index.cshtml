@model IEnumerable<SistemaFacturacion.API.Models.GastoViewModel>

<h2>Lista de Gastos</h2>

<p>
    <a asp-action="Create" class="btn btn-success">Nuevo Gasto</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Usuario</th>
            <th>Categoría</th>
            <th>Moneda</th>
            <th>Monto</th>
            <th>Fecha</th>
            <th>Descripción</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.UsuarioNombre</td>
                <td>@item.CategoriaNombre</td>
                <td>@item.MonedaNombre</td>
                <td>@item.Monto.ToString("C")</td>
                <td>@item.Fecha.ToShortDateString()</td>
                <td>@item.Descripcion</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Editar</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
