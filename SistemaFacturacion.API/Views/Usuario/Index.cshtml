@model IEnumerable<SistemaFacturacion.DAL.Entities.Usuario>

@{
    ViewData["Title"] = "Listado de Usuarios";
}

<h2>@ViewData["Title"]</h2>

<a asp-action="Crear" class="btn btn-primary mb-3">Agregar Usuario</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Correo</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var usuario in Model)
        {
            <tr>
                <td>@usuario.Id</td>
                <td>@usuario.Nombre</td>
                <td>@usuario.Correo</td>
                <td>
                    <a asp-action="Editar" asp-route-id="@usuario.Id" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Eliminar" asp-route-id="@usuario.Id" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
